generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // MySQL, SQLite, MongoDB me badal sakte ho
  url      = env("DATABASE_URL")
}

model Plan {
  id          Int        @id @default(autoincrement())
  planName    String
  description String
  price       Int
  userPlans   UserPlan[] // relation to UserPlan
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  gender       String
  birthDate    DateTime
  birthTime    String
  birthCountry String
  birthCity    String
  email        String?    @unique
  userPlans    UserPlan[] // relation to UserPlan
}

model UserPlan {
  id        Int      @id @default(autoincrement())
  userId    Int
  planId    Int
  startDate DateTime
  endDate   DateTime

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}
