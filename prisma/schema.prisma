generator client {
  provider = "prisma-client-js"
}

datasource db {
 provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Plan {
  id          Int    @id @default(autoincrement())
  planName    String
  description String
  price       Int

  userPlans   UserPlan[]
}

model Admin {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  password          String
  resetToken        String?   
  resetTokenExpiry  DateTime?
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  gender       String
  birthDate    DateTime
  birthTime    String
  birthCountry String
  birthCity    String
  email        String?  @unique
  mobile       String?
  latitude     Float?
  longitude    Float?
  timezone     Float?
  createdAt    DateTime @default(now())

  userPlans    UserPlan[]
}

model UserPlan {
  id        Int      @id @default(autoincrement())
  userId    Int
  planId    Int
  startDate DateTime
  endDate   DateTime

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}
